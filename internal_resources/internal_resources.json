{
	"dnanexus_path": {
		"$python_dist-packages": {
			"path": "/usr/local/lib/python2.7/dist-packages/"
		},
		"$usr_bin": {
			"path": "/usr/bin" 
		},
		"$home": {
			"path": "/home/dnanexus"
		},
		"$root": {
			"path": "/"
		}
	},
	"python_packages": {
		"scgpm_lims": {
			"local_path": "python_packages/scgpm_lims",
			"dnanexus_location": "$python_dist-packages",
			"all_files": [
				"__init__.py",
				"components/connection.py",
				"components/local.py",
				"components/models.py",
				"components/remote.py",
				"components/__init__.py"
			]
		}
	},
	"scripts": {
		"create_sample_sheet.py": {
			"local_path": "scripts/create_sample_sheet.py",
			"dnanexus_location": "$home"
		},
		"calculate_use_bases_mask.py": {
			"local_path": "scripts/calculate_use_bases_mask.py",
			"dnanexus_location": "$home"
		}
	},
	"c_programs": {
		"bwa_mismatches": {
			"local_path": "c_programs/bwa_mismatches",
			"dnanexus_location": "$root"
		},
		"collect_uniqueness_metrics": {
			"local_path": "c_programs/collect_uniqueness_metrics",
			"dnanexus_location": "$root"
		}
	}
}
