{
  "name": "bwa_mem_controller",
  "title": "BWA-MEM Controller",
  "summary": "Converts Illumina data from BCL to FASTQ, demultiplexing barcoded samples if appropriate. Uses DXApp 'BWA-MEM FASTQ Read Mapper' version 1.5.0.",
  "dxapi": "1.0.0",
  "version": "0.1.0",
  "inputSpec": [
		{
			"name": "record_id",
			"label": "DNAnexus ID of the sequencing lane DXRecord.",
			"help": "The DNAnexus ID of the sequencing lane DXRecord.",
			"class": "string",
			"optional": false
		},
    {
      "name": "dashboard_project_id",
      "label": "Dashboard records project DXid",
      "help": "SCGPM Dashboard Data",
      "class": "string",
      "optional": true
    },
    {
      "name": "fastqs",
      "label": "Fastq files",
      "class": "array:file",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "bams",
      "class": "array:file"
    },
    {
      "name": "bais",
      "class": "array:file"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/bwa_mem_controller.py",
		"bundledDepends": [],
    "execDepends": [
      {"name": "libxml-simple-perl"},
      {"name": "xsltproc"},
      {"name": "imagemagick"},
      {"name": "gnuplot-nox"},
      {"name": "ghostscript"},
      {"name": "zlib1g-dev"},
      {"name": "libbz2-dev"},
      {"name": "libxml2"},
      {"name": "libxml2-dev"},
      {"name": "libicu-dev"},
      {"name": "libncurses5"},
      {"name": "libncurses5-dev"}
    ],
    "systemRequirements": {
      "*": {
        "instanceType": "mem1_ssd1_x8"
      }
    }
  },
  "access": {
    "allProjects": "ADMINISTER",
		"network": ["*"]
  }
}
