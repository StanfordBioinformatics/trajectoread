{
    "name": "bwa_controller",
    "title": "BWA Controller",
    "summary": "Align reads with bwa",
    "dxapi": "1.0.0",
    "version": "0.1.0",
    "inputSpec": [
        {
            "name": "record_dxid",
            "label": "Lane record ID",
            "help": "The DNAnexus ID of the dashboard record for the sequencing lane.",
            "class": "string",
            "optional": false
        },
        {
            "name": "dashboard_project_id",
            "label": "Dashboard project ID",
            "help": "SCGPM Dashboard Data project dxid.",
            "class": "string",
            "default": "project-BY82j6Q0jJxgg986V16FQzjx",
            "optional": true
        },
        {
            "name": "worker_id",
            "label": "Worker ID",
            "help": "ID of map_sample applet",
            "class": "string",
            "optional": false
        },
        {
            "name": "worker_project",
            "label": "Worker project ID",
            "class": "string",
            "optional": false
        },
        {
            "name": "fastqs",
            "label": "Fastq files",
            "class": "array:file",
            "patterns": ["*fastq.gz", "*.fastq", "*.fq.gz"],
            "optional": false
        },
        {
            "name": "mark_duplicates",
            "label": "Mark Duplicates",
            "class": "boolean",
            "default": false,
            "optional": true

        },
        {
            "name": "output_folder",
            "label": "Output Folder",
            "class": "string",
            "default": "/stage1_bwa",
            "optional": false
        }
    ],
    "outputSpec": [
        {
            "name": "bams",
            "label": "Bam files",
            "class": "array:file"
        },
        {
            "name": "bais",
            "label": "Bai files",
            "class": "array:file"
        },
        {
            "name": "tools_used",
            "class": "array:file"
        }
    ],
    "runSpec": {
        "interpreter": "python2.7",
        "file": "src/bwa_controller.py",
        "bundledDepends": [],
        "execDepends": [],
        "systemRequirements": {
            "*": {
                "instanceType": "mem1_ssd1_x2"
            }
        },
        "restartableEntryPoints": "all",
        "executionPolicy": {
            "restartOn": {
                "*": 3
            }
        },
        "distribution": "Ubuntu",
        "release": "12.04"
    },
    "access": {
        "allProjects": "ADMINISTER",
        "network": ["*"]
    }
}
